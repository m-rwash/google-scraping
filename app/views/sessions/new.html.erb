<div class="container">
  <div class="login-form">
  	<h2 class="login-form-heading">Please Log In</h2>
  	<%= form_tag '/login' do %>
	<div class="form-group">
	  <%= label_tag :email, 'Email address' %>
	  <%= text_field_tag :email, nil, class: 'form-control', placeholder: 'Email' %>
	</div>
	<div class="form-group">
	  <%= label_tag :password %>
	  <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Password' %>
	</div>
	  <%= submit_tag 'Submit', class: "btn btn-lg btn-primary btn-block" %>
	<% end %>
  </div>
</div>
