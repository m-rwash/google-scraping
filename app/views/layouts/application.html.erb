<!DOCTYPE html>
<html>
  <head>
    <title>GoogleScrapping</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
            <a class="navbar-brand">Google Scrapper</a>
        </div>
        <div class="nav navbar-nav navbar-right">
          <% if current_user %>
              <li><strong><span class="glyphicon glyphicon-user"></span> Logged in as <%= current_user.name %>&nbsp;&nbsp;&nbsp;&nbsp;</strong> </li>
              <li><span class="glyphicon glyphicon-log-out"><%= link_to "Logout", logout_path%>&nbsp;</span></li>
          <% else %>
           <li> <%= link_to 'Login', login_path %> </li>
        <% end %>
        </div>
    </div>
  </nav>

  	

    <%= yield %>
  </body>
</html>
